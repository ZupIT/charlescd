{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase":  1 }],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"],
    "comma-spacing": ["error", { "before":  false, "after":  true }],
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", {
      "asyncArrow": "always"
    }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  }
}
